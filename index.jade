extends partials/hero-layout

block content
  .hero.hero-landing
    .row.valign-wrapper.no-valign-wrapper-on-mobile
      .col.l5.valign.hero-text
        .container-wide
          h1 Visual editing layer for your regular website.
          h2
            | Stop struggling with Wordpress themes.
            |  Create a simple HTML website without thinking about content editing.
            |  Have content editing layer for free <b>without spending a minute</b>.

          a.btn.btn-large.waves-effect.waves-light.sign-up-btn(href='http://app.closeheat.com/auth/github') Start innovating
      .col.l7.no-right-padding.valign.hero-img-col
        a(href='http://app.closeheat.com/auth/github')
          img.hero-img.responsive-img(src='/img/editor.png', alt='Sign Up Now')
